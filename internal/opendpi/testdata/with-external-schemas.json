{
  "opendpi": "1.0.0",
  "info": {
    "title": "User Management Platform",
    "version": "3.1.0",
    "description": "User data with external schema files"
  },
  "connections": {
    "users_db": {
      "host": "users.db.example.com:5432",
      "variables": {
        "database": "users",
        "schema": "public"
      },
      "type": "postgresql"
    }
  },
  "ports": {
    "users": {
      "description": "User account data",
      "connections": [
        {
          "connection": "#/connections/users_db",
          "location": "users"
        }
      ],
      "schema": {
        "$ref": "schemas/user.json"
      }
    },
    "user_profiles": {
      "description": "Extended user profile information",
      "connections": [
        {
          "connection": "#/connections/users_db",
          "location": "user_profiles"
        }
      ],
      "schema": {
        "$ref": "schemas/user-profile.json"
      }
    }
  }
}