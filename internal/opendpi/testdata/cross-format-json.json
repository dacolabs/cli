{
  "opendpi": "1.0.0",
  "info": {
    "title": "Cross Format Test (JSON)",
    "version": "1.0.0",
    "description": "JSON spec with mixed YAML and JSON schema references"
  },
  "connections": {
    "database": {
      "protocol": "postgresql",
      "host": "localhost:5432"
    }
  },
  "ports": {
    "users_yaml": {
      "description": "User data from YAML schema",
      "connections": [
        {
          "connection": { "$ref": "#/connections/database" },
          "location": "users"
        }
      ],
      "schema": { "$ref": "schemas/user.yaml" }
    },
    "users_json": {
      "description": "User data from JSON schema",
      "connections": [
        {
          "connection": { "$ref": "#/connections/database" },
          "location": "users"
        }
      ],
      "schema": { "$ref": "schemas/user.json" }
    },
    "profiles_yaml": {
      "description": "Profile with YAML schema referencing YAML address",
      "connections": [
        {
          "connection": { "$ref": "#/connections/database" },
          "location": "profiles"
        }
      ],
      "schema": { "$ref": "schemas/user-profile.yaml" }
    },
    "profiles_json": {
      "description": "Profile with JSON schema referencing JSON address",
      "connections": [
        {
          "connection": { "$ref": "#/connections/database" },
          "location": "profiles"
        }
      ],
      "schema": { "$ref": "schemas/user-profile.json" }
    },
    "mixed_inline": {
      "description": "Inline schema with mixed format refs",
      "connections": [
        {
          "connection": { "$ref": "#/connections/database" },
          "location": "mixed"
        }
      ],
      "schema": {
        "type": "object",
        "properties": {
          "yaml_address": { "$ref": "schemas/address.yaml" },
          "json_address": { "$ref": "schemas/address.json" }
        }
      }
    }
  }
}
